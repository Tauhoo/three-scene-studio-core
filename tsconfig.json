{
  "compilerOptions": {
    "target": "ES2022",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": false,
    "sourceMap": true,
    "moduleResolution": "Node",
    "allowJs": true,
    "noEmit": true
  },
  "exclude": ["node_modules", "dist", "src/**/*.test.ts"],
  "include": ["src/**/*"]
}
